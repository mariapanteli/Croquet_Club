<h1>Listing bookings</h1>

<table>
  <thead>
    <tr>
      <th>Lawn</th>
      <th>Time start</th>
      <th>Time end</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.lawn_id %></td>
        <td><%= booking.time_start %></td>
        <td><%= booking.time_end %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

